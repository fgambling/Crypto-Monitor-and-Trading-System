{
  "name": "crypto-monitor",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "node --loader ts-node/esm --experimental-specifier-resolution=node src/local/server.ts",
    "build": "tsc -p .",
    "deploy": "cdk deploy",
    "deploy:dashboard": "cdk deploy --outputs-file cdk-outputs.json",
    "cdk:synth": "cdk synth",
    "cdk:diff": "cdk diff",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "echo \"(add eslint/prettier later)\""
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.637.0",
    "@aws-sdk/lib-dynamodb": "^3.637.0",
    "@aws-sdk/client-sqs": "^3.637.0",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@vitest/coverage-v8": "^1.6.0",
    "aws-cdk": "^2.1030.0",
    "aws-cdk-lib": "^2.220.0",
    "constructs": "^10.4.2",
    "esbuild": "^0.25.11",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "tsup": {
    "entry": [
      "src/handlers/ingest.ts",
      "src/posts.ts",
      "src/handlers/trade.ts",
      "src/local/server.ts"
    ],
    "format": [
      "esm"
    ],
    "sourcemap": true,
    "clean": true,
    "minify": false,
    "platform": "node",
    "target": "node20"
  }
}
